@model IEnumerable<Azmoonak.Database.Models.User>

@{
    ViewData["Title"] = "Site Details | جزئیات سایت";
    Layout = "~/Areas/Admin/Views/Shared/_PanelLayout.cshtml";
}

<h1 class="text-center">Site Details | جزئیات سایت</h1>
<hr />

<h5 class="text-center mt-3">Admins Count : @ViewBag.AdminsCount | تعداد مدیر ها : @ViewBag.AdminsCount</h5>
<table class="table table-bordered table-striped table-dark mt-3">
    <thead class="text-center">
        <tr>
            <th>
                <span class="fa fa-lg fa-sort-numeric-asc"></span>
                
            </th>
            <th>
                <span class="fa fa-lg fa-id-card-o"></span>
                @Html.DisplayNameFor(model => model.FName)
            </th>
            <th>
                <span class="fa fa-lg fa-id-card-o"></span>
                @Html.DisplayNameFor(model => model.LName)
            </th>
            <th>
                <span class="fa fa-lg Example of phone fa-phone"></span>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.Password)
            </th> *@
            @* <th>
            @Html.DisplayNameFor(model => model.Code)
            </th> *@
            <th>
                <span class="fa fa-lg fa-user-o"></span>
                @Html.DisplayNameFor(model => model.Role.RoleName)
            </th>
           @*  <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th> *@
        </tr>
    </thead>
    <tbody class="text-center">
        @{
            var number = 0;
        }
        @foreach (var item in Model)
        {
            number++;

            <tr>
                <td>
                    @number
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
               @*  <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td> *@
                @*             <td>
            @Html.DisplayFor(modelItem => item.Code)
            </td> *@
                <td>
                    @Html.DisplayFor(modelItem => item.Role.RoleTitle)
                </td>
                @* <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td> *@
            </tr>
        }
    </tbody>
</table>

<hr />               

