@model Azmoonak.Database.Models.User

<div style="background-color:#151515;">
    <h2 style="color:#f07900;" class="text-center">نام کاربر : @Model.FName @Model.LName</h2>
    <h4 style="color:#f07900;" class="text-center mt-3">شماره موبایل : @Model.Mobile</h4>
    <h4 style="color:#f07900;" class="text-center mt-3">وضعیت : @Model.Role.RoleTitle</h4>
    <hr style="color:white;" />
    <h4 class="text-danger text-center">آیا مطمعن هستید؟</h4>
    <form asp-area="admin" asp-controller="panel" asp-action="delete" class="text-center">
        <input asp-for="Id" hidden />
        <button class="btn btn-success">Yes</button>
        <a asp-controller="panel" asp-action="getusers" class="btn btn-danger">No</a>
    </form>
</div>

