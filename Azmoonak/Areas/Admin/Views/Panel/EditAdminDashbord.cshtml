@model Azmoonak.Core.ViewModels.EditAdminViewModel

@{
    ViewData["Title"] = "Edit Admin Profile | ویرایش پروفایل مدیر";
    Layout = "~/Areas/Admin/Views/Shared/_PanelLayout.cshtml";
}

<h1 class="text-center">Edit Profile | ویرایش پروفایل</h1>
<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAdminDashbord">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="FName" class="control-label"></label>
                <input asp-for="FName" class="form-control border-black border-4" />
                <span asp-validation-for="FName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LName" class="control-label"></label>
                <input asp-for="LName" class="form-control border-black border-4" />
                <span asp-validation-for="LName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mobile" class="control-label"></label>
                <input asp-for="Mobile" class="form-control border-black border-4" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
            <div class="form-group" >
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control border-black bg-danger border-4" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="RoleId" class="control-label" hidden></label>
                <input asp-for="RoleId" class="form-control border-black border-4"  readonly hidden/>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="ثبت" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="btn btn-danger mt-3">
    <a class="text-decoration-none text-white" asp-action="Index"><span class="fa fa-angle-double-right fa-lg"></span> بازگشت</a>
</div>

