@model Azmoonak.Core.ViewModels.GroupQuestionViewModel

<div class="newheader">
    <div class="container-fluid bg-site-mode-color h-100 rounded-4 header-div">
        <div class="row h-100">
            <div class="col-5  p-0   d-flex align-items-center justify-content-center h-100 rounded-end-4">
                <div class="humburger-menu ms-5 d-md-none">
                    <img id="showslider" src="~/Image/Site/humborger.png" alt="">
                </div>
                <ul class="d-flex mt-3 align-items-center ulList d-md-flex gap-lg-4  gap-md-3 d-none  list-unstyled mx-1 me-5 w-100 ">
                    <li class="h-100 d-flex align-items-center pointer"><a asp-area="" asp-controller="home" asp-action="index" class="text-decoration-none text-white">خانه</a></li>
                    <li class="h-100 d-flex align-items-center pointer position-relative">

                        @{
                            if (User.Identity.IsAuthenticated)
                            {
                                <a asp-area="" asp-controller="exam" asp-action="showexamgroups" class="text-decoration-none text-white">لیست آزمون ها</a>
                            }
                            else
                            {
                                <a asp-area="" asp-controller="account" asp-action="login" class="text-decoration-none text-white">لیست آزمون ها</a>
                            }
                        }
                    </li>
                    <li class="h-100 d-flex align-items-center pointer sample-parent position-relative">
                        <a class="text-decoration-none text-white" href="#">نمونه سوالات</a>
                        <div class="sample-question rounded-2">

                            <ul class="list-unstyled w-100 p-2">
                                <li class="w-100 py-2 d-flex justify-content-center mt-1  align-items-center"><partial name="groupspartial" model="@Model.Groups" /></li>
                                <li class="w-100  d-flex justify-content-center mt-1  align-items-center"><a asp-area="" asp-controller="question" asp-action="ShowExampleGroups">بیشتر</a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="h-100 d-flex align-items-center pointer"><a class="text-decoration-none text-white" href="#">درباره ما</a></li>
                </ul>
            </div>






            <div class="col-2  h-100 position-relative d-flex justify-content-center">
                <div class="logo">
                    <div class="logo-box">
                        <img class="logo-img" src="~/Image/Site/Slider/Logo.png" alt="">
                    </div>
                </div>
            </div>





            <div class="col-5 d-flex justify-content-end align-items-center h-100 rounded-start-4">

                <a class="text-decoration-none text-white" asp-area="" asp-controller="exam" asp-action="ShowDemoExamGroups">دمو امتحان</a>

                <div class="d-flex flex-column align-items-center gap-2">
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            <a asp-area="" asp-controller="profile" asp-action="Index" style="cursor: pointer; color:white;" title="ورود به پنل کاربری" class="fa fa-user fa-lg text-decoration-none text-black"></a>
                            <h6 class="text-black">@ViewBag.UserFName @ViewBag.UserLName</h6>
                            // <h6>@User.Identity.Name</h6>
                        }
                        else
                        {
                            <a asp-area="" asp-controller="account" asp-action="login" style="cursor: pointer; color:white;" title="ورود به پنل کاربری" class="fa fa-user fa-lg text-decoration-none text-black"></a>
                            <h6 class="text-black">حساب کاربری</h6>
                        }
                    }

                </div>


            </div>
        </div>




    </div>
    <div id="background-slider" class="background-slider d-none position-absolute top-0">
    </div>

    <div class="menu-slider  bg-black position-absolute top-0">
        <div class="logo-responsive position-relative w-100 h-25">
            <span id="closed" class="bg-danger btn btn-close mt-2 me-2"></span>
            <img class="shadow" src="/img/logo.png" alt="">
        </div>
        <div class="lists-menu h-50 w-100">
            <ul class="list-unstyled">
                <li class="p-2 mt-1 pointer"><a class="text-decoration-none text-black" href="#">لیست آزمون ها</a></li>
                <li class="p-2 mt-1 pointer"><a class="text-decoration-none text-black" href="#">نمونه سوالات</a></li>
                <li class="p-2 mt-1 pointer"><a class="text-decoration-none text-black" href="#">راهنما</a></li>
            </ul>
        </div>
        <div class="w-100 h-25 d-flex align-items-end">
            <div class="login-respomnsive pointer w-100 mb-3 d-flex justify-content-between align-items-center bg-info p-2">
                <span class="mt-2"><i class="fa fa-arrow-right"></i><h5 class="d-inline-block me-2">پروفایل</h5></span>
                <i class="fa fa-user-circle fa-lg"></i>
            </div>
        </div>
    </div>
</div>
