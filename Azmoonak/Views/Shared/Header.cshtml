@model Azmoonak.Core.ViewModels.GroupQuestionViewModel

<nav>
    <div class="col-12 bg-black text-white d-flex justify-content-center ">

        @{
            if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="profile" asp-action="Index" class="a3">
                    <span class="fa fa-user text-warning"></span>
                    <span> Profile</span>
                </a>
            }
            else
            {
                <a asp-controller="account" asp-action="login">
                    <span class="fa fa-sign-in"></span>
                    <span> Login</span>
                </a>

            }
        }

@*        <a  asp-controller="admin" asp-action="Index">
            <i class="fa fa-user fa-lg"></i>
        </a>*@
    </div>
    <div class="container-fluid contain my-0 my-md-3">
        <div class="row">
            <div class="col-4 col-md-3 Logo">
                <a class="d-none d-md-inline-block" href="#"><img src="~/Image/Site/onlinexam-Logo.jpg" width="100" height="100" alt="onlinexam-Logo"></a>
                <i id="menubar" class="fa fa-bars d-md-none"></i>
            </div>
            <div class="d-none col-md-6 d-md-flex align-items-center">
                <ul class="d-flex menu-ul mx-auto">
                    <li class="list-menu" id="online-test">
                        آزمون آنلاین
                        <div id="test-listmenu" class="hidden-testList d-flex rounded-1">
                            <ul>
                                @*اینجا باید یک ویو جدید بسازم که بره توی صفحه دیگه و لیست امتحانات رو نشان بده دسته بندی های گروه*@
                            </ul>
                        </div>
                    </li>

                    <li id="proposal-menu" class="list-menu">
                        پیشنهادی
                        <div id="proposal-listmenu" class="proposal-testList d-flex rounded-1">
                            <ul>
                                <li>آزمون word</li>
                                <li>آزمون exel</li>
                                <li>آزمون powerpoint</li>
                                <li>آرمون c#</li>
                            </ul>

                        </div>
                    </li>
                    <li id="example-question-menu" class="list-menu">
                        نمونه سوالات
                        <div id="test-listmenu" class="example-question-testList d-flex rounded-1">
                            <ul>
                                <partial name="groupspartial" model="@Model.Groups" />
                            </ul>
                        </div>
                    </li>
                    <a href="#" class="text-decoration-none text-black">
                    <li class="list-menu guide">راهنما<span class="fa fa-exclamation-circle"></span></li></a>
                </ul>
            </div>
            <div class="col-8 col-md-3 d-flex align-items-center justify-content-center">
                <div class="row align-items-center">
                    <div id="searh-box" class="col search-box">
                        <input id="search-inpt" class="search-inpt" type="search" placeholder="جستجو...">
                        <i class="fa fa-search"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="offCanavas" class="offCanavas">
        <div id="menusliding" class="menu-sliding">
            <span id="close" class="close fa fa-times"></span>
            <div class="img d-flex justify-content-end">
                <img src="~/Image/Site/onlinexam-Logo.jpg" alt="Logo">
            </div>
            <div class="dropdown-lists my-4">
                <ul>
                    <li id="onlineTest-sliding" class="sliding-group-li">آزمون آنلاین<i id="onlineTest-icon" class="fa angles fa-angle-double-left"></i></li>
                    <div id="sliding-box" class="dropdown-onlineexam-box me-4 showlists">
                        <ul>
                            <a href="#">
                            <li>word</li></a>
                            <a href="#">
                            <li>exel</li></a>
                            <a href="#">
                            <li>c #</li></a>
                            <a href="#">
                            <li>powerpoint</li></a>
                        </ul>
                    </div>
                    <li class="sliding-group-li">پیشنهادی<i class="fa angles fa-angle-double-left"></i></li>
                    <li class="sliding-group-li">نمونه سوالات<i class="fa angles fa-angle-double-left"></i></li>
                    <li class="sliding-group-li">راهنما<i class="fa fa-exclamation-circle"></i></li>
                </ul>
            </div>
        </div>
    </div>
</nav>
