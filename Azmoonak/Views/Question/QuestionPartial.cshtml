@model IEnumerable<Azmoonak.Database.Models.Question>


<main>

    @{
        if (Model.Count()>0)
        {
            foreach (var item in Model)
            {
                <!--related Question -->
                <div class="bg-q">
                    <form class="q-right" dir="rtl">

                        <h2 class="q-question">@item.QText</h2>
                        <span class="q-form"><span class="q-alpha">الف)</span> @item.AnOne</span><hr>
                        <span class="q-form"><span class="q-alpha">ب)</span> @item.AnTwo</span><hr>
                        <span class="q-form"><span class="q-alpha">ج)</span> @item.AnThree</span><hr>
                        <span class="q-form"><span class="q-alpha">د)</span> @item.AnFour</span><hr>
                        <span class="q-form"><span class="q-alpha">جواب درست)</span>  @item.CorrectAn</span><hr>

                    </form>
                </div>
            }
        }
        else
        {
            <h1>فعلا نمونه سوالی برای این گروه وجود ندارد</h1>
        }
    }

   
</main>